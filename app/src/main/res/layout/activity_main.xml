<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Fetch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/insideTextView"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:hapticFeedbackEnabled="true"
        android:text="In Temp"
        android:textSize="30sp"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toTopOf="@+id/outsideTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />

    <TextView
        android:id="@+id/outsideTextView"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="332dp"
        android:gravity="center"
        android:text="Out Temp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dataTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="Data"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/fetchButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/inTextLabel"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginTop="272dp"
        android:gravity="center"
        android:text="IN:"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/insideTextView"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outTextLabel"
        android:layout_width="91dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="OUT:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/dataTextView"
        app:layout_constraintEnd_toStartOf="@+id/outsideTextView"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inTextLabel"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>